#  GNUMakefile
 
# Just a snippet to stop executing under other make(1) commands
# that won't understand these lines
ifneq (,)
This makefile requires GNU Make.
endif
	
CXX_STD = CXX11
PKG_CPPFLAGS =-DROUT -I../inst/include -Wno-deprecated-declarations -DBOOST_NO_AUTO_PTR -Wno-unknown-pragmas -Wno-comment 

#somehow the implicit $CC isn't available/accurate, so we have to re-fetch it
compilerinfo = ${shell R CMD config CXX}
compiler = $(findstring clang++, $(compilerinfo))
#$(info "$(compiler)")
ifneq (,$(compiler))
	fslib = c++fs
else
	fslib = stdc++fs
endif
	


PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) `${R_HOME}/bin/Rscript -e "RProtoBufLib:::LdFlags();cat(' ');Rhdf5lib::pkgconfig('PKG_CXX_LIBS');cat(' ');RcppParallel::RcppParallelLibs()"` -l$(fslib)  

 