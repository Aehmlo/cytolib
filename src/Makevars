CXX_STD = CXX17
PKG_CPPFLAGS =-DROUT -I../inst/include -DBOOST_NO_AUTO_PTR

RHDF5_LIBS= $(shell echo 'Rhdf5lib::pkgconfig("PKG_CXX_LIBS")'|\
    "${R_HOME}/bin/R" --vanilla --slave)

TILEDB_LIBS = -ltiledb
FSLIB = -lstdc++fs

PKG_LIBS = $(FSLIB) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) `${R_HOME}/bin/Rscript -e "RProtoBufLib:::LdFlags()"` $(RHDF5_LIBS) $(TILEDB_LIBS) `${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()"`  

